      .col-sm-9.justify-content-between
        .form-check.form-check-inline
          %input.form-check-input{type:'checkbox'}
          %label.form-check-label 月初
        .form-check.form-check-inline
          %input.form-check-input{type:'checkbox'}
          %label.form-check-label 月末
        .form-check.form-check-inline
          %input.form-check-input{type:'checkbox'}
          %label.form-check-label 週初
        .form-check.form-check-inline
          %input.form-check-input{type:'checkbox'}
          %label.form-check-label 週末
