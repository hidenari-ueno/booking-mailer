      %label.col-sm-1.text-muted.d-flex.justify-content-end.align-items-end From
      %input.form-control.col-sm-9{type:'email'}
    .row.mt-3
      %label.col-sm-1.text-muted.d-flex.justify-content-center.align-items-center To
      %input.form-control.col-sm-9{type:'email'}
    .row.mt-3
      %label.col-sm-1.text-muted.d-flex.justify-content-center.align-items-center 件名
      %input.form-control.col-sm-9{type:'text'}
    .row.mt-3
      %label.col-sm-1.text-muted.d-flex.justify-content-end.align-items-strech 本文
      %textarea.form_body.form-control.col-sm-9{rows:20}
